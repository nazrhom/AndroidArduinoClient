<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.enrico.client.SendCommand"
    tools:showIn="@layout/activity_send_command">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/addr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/port"
        android:layout_below="@+id/addr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin1"
        android:id="@+id/pin1"
        android:layout_below="@+id/port"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:onClick="TurnOn"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin2"
        android:id="@+id/pin2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="TurnOn"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin3"
        android:id="@+id/pin3"
        android:layout_below="@+id/pin2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="TurnOn"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin4"
        android:id="@+id/pin4"
        android:layout_below="@+id/pin3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="TurnOn"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin5"
        android:id="@+id/pin5"
        android:layout_below="@+id/pin4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="TurnOn"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pin6"
        android:id="@+id/pin6"
        android:layout_below="@+id/pin5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="TurnOn"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:onClick="TurnOn"
        android:layout_below="@+id/pin6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramp1"
        android:id="@+id/Ramp1"
        android:onClick="TurnOn"
        android:layout_alignBaseline="@+id/pin2"
        android:layout_alignBottom="@+id/pin2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
